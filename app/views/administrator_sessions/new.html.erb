<% form_for @administrator_session, :url => administrator_session_path do |f| %>
  <fieldset style="margin: 1em; width:300px;border: thin solid #000;">
    <legend style="margin: 1em; font-size: 20px; letter-spacing: 0.5em;">Login</legend>
    <p>
    <%= f.error_messages %>
    </p>
    <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %><br />
    </p>
    <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
    </p>
    <p>
    <%= f.submit "Login" %>
    </p>
  </fieldset>
<% end %>
