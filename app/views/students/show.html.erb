<% javascript_tag do  %>
  function readonly(element) {
    // element.writeAttribute("readonly", "readonly")
    var e = new Element('span')
    e.innerHTML = element.value
    element.replace(e)
  }
  function disabled(element) {
    element.writeAttribute("disabled", "disabled")
  }
  $$('#info input[type!=hidden]').each(readonly)
  $$('#info textarea').each(readonly)
  $$('#info select').each(readonly)
  $$('.calendar_date_select_popup_icon').each(Element.remove)
  $$('#new_hour_link').each(Element.remove)
  $$('#content a').each(Element.remove)
<% end %>

